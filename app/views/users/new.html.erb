<h1 style="text-align: center;">Gyraph</h1>
<div style="text-align: center;">新規登録</div>
<%= form_with model: @user, local: true do |form| %>
  <div class="signup-field" style="display: grid; gap: 10px;">
    <label>名前</label>
    <%= form.text_field :name %>
    <label>メールアドレス</label>
    <%= form.text_field :email %>
    <label>パスワード</label>
    <%= form.password_field :password %>
  </div>
  <div style="text-align: center; margin-top: 10px;">
    <%= form.submit "新規登録", class: "basic-btn" %>
  </div>
<% end %>
