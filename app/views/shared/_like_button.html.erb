<turbo-frame id="like_button_<%= practice_record.id %>">
    <% if liked %>
      <%= link_to practice_record_like_path(practice_record_id: practice_record.id, id: like.id),
                  method: :delete,
                  data: { turbo_method: :delete, turbo_frame: "like_button_#{practice_record.id}" } do %>
        <%= image_tag "good-blue.svg", alt: "いいね済ボタン", class: "like-container" %>
      <% end %>
    <% else %>
      <%= link_to practice_record_likes_path(practice_record_id: practice_record.id),
                  method: :post,
                  data: { turbo_method: :post, turbo_frame: "like_button_#{practice_record.id}" } do %>
        <%= image_tag "good-normal.svg", alt: "いいねボタン", class: "like-container" %>
      <% end %>
    <% end %>
</turbo-frame>
