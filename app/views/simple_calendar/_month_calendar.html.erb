<div class="simple-calendar p-8">

  <div class="calendar-heading flex justify-center">
    <div class="flex justify-between  items-center" style="gap: 35px; justify-content: center;">
      <div><%= link_to t('simple_calendar.previous', default: '前月'), calendar.url_for_previous_view, class: "basic-btn", style: "margin: 0; width: 80px;" %></div>
      <!---<div><%= link_to t('simple_calendar.today', default: 'Today'), calendar.url_for_today_view %></div>--->
      <div class="calendarYear">
        <%= start_date.year %>
        <time datetime="<%= start_date.strftime('%Y-%m') %>" class="calendar-title"><%= t('date.month_names')[start_date.month] %></time>
      </div>

      <div><%= link_to t('simple_calendar.next', default: '翌月'), calendar.url_for_next_view, class: "basic-btn", style: "margin: 0; width: 80px;" %></div>
    </div>
  </div>

  <table class="table table-striped break-all">
    <thead>
      <tr>
        <% date_range.slice(0, 7).each do |day| %>
          <th><%= t('date.abbr_day_names')[day.wday] %></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% date_range.each_slice(7) do |week| %>
        <tr>
          <% week.each do |day| %>
            <%= content_tag :td, class: calendar.td_classes_for(day), style: "width: 10px;" do %>
              <% instance_exec(day, calendar.sorted_events_for(day), &passed_block) %>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
