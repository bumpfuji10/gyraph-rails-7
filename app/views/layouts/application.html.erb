<!DOCTYPE html>
<html>
  <head>
    <title>PracticeRecordRails7</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <%= render("shared/basic_header")%>

    <% if flash[:alert] %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative text-center mx-auto max-w-md md:max-w-lg lg:max-w-xl mt-8" role="alert">
        <% if flash[:alert_detail].nil? %>
          <strong class="font-bold block"><%= flash[:alert] %></strong>
        <% else %>
          <strong class="font-bold block pb-4"><%= flash[:alert] %></strong>
        <% end %>
        <% if flash[:alert_detail] %>
          <% if flash[:alert_detail].is_a?(Array) %>
            <ul class="list-disc list-inside text-left">
              <% flash[:alert_detail].each do |message| %>
                <li class="mb-1"><%= message %></li>
              <% end %>
            </ul>
          <% else %>
            <%= flash[:alert_detail]%>
          <% end %>
        <% end %>
      </div>
    <% elsif flash[:success] %>
      <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative text-center mx-auto max-w-md md:max-w-lg lg:max-w-xl mt-8" role="alert">
        <strong class="font-bold block"><%= flash[:success] %></strong>
      </div>
    <% end %>
    <div class="basic-background">
      <%= yield %>
    </div>
  </body>
</html>
