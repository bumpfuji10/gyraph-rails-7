<%= render 'shared/basic_header' %>
<div class="flex flex-col text-center gap-5 p-10">
  <h1 class="text-xl font-semibold">ログイン</h1>
</div>
<% if flash[:alert] %>
  <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative text-center mb-10 mx-auto max-w-md md:max-w-lg lg:max-w-xl" role="alert">
    <strong class="font-bold block pb-4">ログインできませんでした</strong>
    <span class="block">
      メールアドレスまたはパスワードが間違っています
    </span>
  </div>
<% end %>
<div class="user-form-wrapper">
  <%= form_with url: login_path, local: true do |form| %>
    <div class="signup-and-login-field-wrapper">

      <label>メールアドレス</label>
      <%= form.text_field :email, class: "signup-and-login-field", autocomplete: "email", autocorrect: "off", autocapitalize: "none" %>
      <label>パスワード</label>
      <%= form.password_field :password, class: "signup-and-login-field", autocomplete: "current-password", autocorrect: "off", autocapitalize: "none" %>

      <%= form.submit "ログイン", class: "basic-btn" %>
    </div>
  <% end %>
</div>

<p style="text-align: center; margin-top: 10px;">
  <%= link_to("会員登録はこちら", new_user_path, style: "color: rgb(113, 199, 235);") %>
</p>
