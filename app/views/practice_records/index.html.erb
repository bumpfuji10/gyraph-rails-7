<%= render 'shared/basic_header' %>

<% if @practice_records.empty? %>
  <div class="empty_record_message">表示する練習記録がありません。</div>
<% else %>
  <div class="container mx-auto py-8 px-4">
    <div class="grid gap-6 col-span-4 sm:col-span-9">
      <% @practice_records.each do |record| %>
        <%= link_to practice_record_path(record) do %>
          <div class="bg-white shadow rounded-lg p-6">

          <div class="grid gap-4">
            <div class="flex items-center gap-x-2">
              <strong><%= record.user.name %></strong>
              <p class="text-sm"><%= extract_domain_from_email(record.user.email) %></p>
            </div>

              <%= practiced_date_format_ja(record.practiced_date) %>
              <div class="text-2xl font-bold"><%= record.title %></div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>
